						"key": "Ocp-Apim-Trace",
						"value": "true"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{Ocp-Apim-Key}}"
					},
					{
						"warning": "This is a duplicate header and will be overridden by the Authorization header generated by Postman.",
						"key": "Authorization",
						"value": "Basic dGVzdHVzZXI6dGVzdHVzZXI=",
						"type": "text",
						"disabled": true
					},
					{
						"key": "",
						"value": "",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"emailAddress\":\"{{userName}}\"}"
				},
				"url": {
					"raw": "{{url}}/user",
					"host": [
						"{{url}}"
					],
